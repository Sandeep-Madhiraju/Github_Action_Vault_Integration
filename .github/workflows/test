name: output-vault-secrets

on:
  push:
    branches:
      - main  # Adjust the branch name as needed

jobs:
  build:
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v4

      - name: Get Vault Secrets
        id: vault-secrets
        uses: hashicorp/vault-action@v3
        with:
          url: https://vault-cluster-aws.vault.797ef198-e9b5-4477-b448-5c560fcbe367.aws.hashicorp.cloud:8200
          token: ${{ secrets.VaultToken }}
          secrets: |
            kv/data/ci/app_secret appsecret | APP_SECRET_KEY_ID
          method: token
          kubernetesTokenPath: /var/run/secrets/kubernetes.io/serviceaccount/token
          exportEnv: true
          exportToken: false
          outputToken: false
          tlsSkipVerify: true
          jwtTtl: 360000
          ignoreNotFound: false

      - name: Display Vault Secrets
        run: |
          echo "The secret value is $APP_SECRET_KEY_ID"

      - name: Set Output Secret
        run: echo "::set-output name=app_secret::$APP_SECRET_KEY_ID"

      - name: Use Output Secret
        run: echo "The secret retrieved from Vault is ${{ steps.vault-secrets.outputs.app_secret }}"
